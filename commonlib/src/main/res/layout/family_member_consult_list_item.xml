<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:descendantFocusability="blocksDescendants"  android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="vertical"
        android:paddingLeft="@dimen/px_40"
        android:paddingRight="@dimen/px_40"
        android:paddingTop="@dimen/px_18"
        android:paddingBottom="@dimen/px_18">

        <LinearLayout
            android:id="@+id/ll_date"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/tv_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="09"
                android:textColor="#252525"
                android:textSize="@dimen/text_size_40_px" />

            <TextView
                android:layout_gravity="center_vertical"
                android:id="@+id/tv_month"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/px_6"
                android:layout_marginRight="@dimen/px_32"
                android:gravity="center"
                android:text="一月"
                android:textColor="#4d4d4d"
                android:textSize="@dimen/px_20" />
        </LinearLayout>

        <TextView
            android:layout_marginTop="@dimen/px_6"
            android:id="@+id/tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/ll_date"
            android:ellipsize="end"
            android:maxLines="4"
            android:textColor="#4d4d4d"
            android:textSize="@dimen/text_size_30_px" />

        <cn.medtree.medtreedoctor.view.MyGridView
            android:listSelector="@color/transparent"
            android:layout_marginTop="@dimen/px_10"
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@id/tv_content"
            android:layout_below="@id/tv_content"
            android:numColumns="4" />
    </RelativeLayout>
</LinearLayout>