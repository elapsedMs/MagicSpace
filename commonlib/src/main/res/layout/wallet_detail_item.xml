<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingBottom="@dimen/text_size_32_px"
    android:paddingLeft="@dimen/base_padding_left_and_right"
    android:paddingRight="@dimen/base_padding_left_and_right"
    android:paddingTop="@dimen/px_32">

    <TextView
        android:id="@+id/tv_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/px_20"
        android:text="2000-12-12 09:32"
        android:textColor="#252525"
        android:textSize="@dimen/text_size_32_px" />

    <TextView
        android:id="@+id/tv_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_time"
        android:text="提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123提现13123"
        android:textColor="#4d4d4d"
        android:textSize="@dimen/px_24" />

    <TextView
        android:id="@+id/tv_money"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_type"
        android:layout_alignParentRight="true"
        android:text="+12,000币"
        android:textSize="@dimen/text_size_32_px" />
</RelativeLayout>